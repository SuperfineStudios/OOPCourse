#include<iostream>
#include<string>

using namespace std;

class utility
{
	


	public:
	static float KtoP(void)
	{
		float K, P;
		
		cout << "Enter mass in kg: ";
		cin >> K;
		cout << endl;

		P = K*2.205;
		return P;
	
	}
	
	static float PtoK(void)
	{
		float K, P;
		
		cout << "Enter mass in pounds: ";
		cin >> P;
		cout << endl;

		K = P/2.205;
		return K;
	
	}
	
};


int main()
{
	cout << "Convert Kilograms to pounds?";

	utility::KtoP();
	utility::PtoK();

}


