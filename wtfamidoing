#include<iostream>
#include<string>
#include<algorithm>

using namespace std;

class utility
{
	public:
	static float KtoP(void)
	{
		float K, P;
		
		cout << "Enter mass in kg: ";
		cin >> K;
		cout << endl;

		P = K*2.205;
		cout << K << " kg is " << P << " lbs" << endl;
		return P;
	}
	
	static float PtoK(void)
	{
		float K, P;
		
		cout << "Enter mass in pounds: ";
		cin >> P;
		cout << endl;

		K = P/2.205;
		cout << P << " lbs is " << K << " kg" << endl;
		return K;
	}

	static int count(const string& s, char c)	// count occurrences of c in s
	{
		int n = 0;
		string::const_iterator i = find(s.begin(),s.end(),c);
		while (i != s.end())
		{
			++n;
			i = find(i+1,s.end(),c);
		}
		return n;
	}

	static void f()
	{
		string m;
		char c;
		cout << "Enter a string: " << endl;
		cin >> m;
		cout << "Enter a character: ";
		cin >> c;
		int a_count = count(m,c);

		cout << "\"" << m << "\" contains " << a_count << " " << c <<"'s" << endl;
	}
};

/* int main()
{
	cout << "Convert Kilograms to pounds?";

	utility::KtoP();
	utility::PtoK();
}
*/

int main()
{
	int funcchoice;
	cout << "Enter 1 to see the number of character instances in a string, or enter 2 to do a mass/weight conversion." << endl;
	cin >> funcchoice;
	cout << endl;

	if(funcchoice == 1)
	{
		int stringchoice;
		for(;;)
		{
			cout << "Enter 1 to see the number of character instances in a word, or anything else to exit" << endl;
			cin >> stringchoice;
			if(stringchoice == 1)
				utility::f();
			else
				break;
		}
	}
	else if(funcchoice == 2)
	{
		int korp;
		for(;;)
		{
			cout << "Press 1 to convert kg to lbs or press 2 to convert lbs to kg, or anything else to exit: ";
			cin >> korp;

			if(korp == 1)
			{
				utility::KtoP();
			}
			else if(korp == 2)
			{
				utility::PtoK();
			}
			else
			{
				break;
			}
		}
	}
	return 0;
}
